<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.njwb.dao.UserDao" >
<resultMap type="User" id="UserResult">
		<id property="id" column="id" />
		<result property="user_id" column="user_id" />
        <result property="user_name" column="user_name" />
        <result property="user_sex" column="user_sex" />
        <result property="user_phone" column="user_phone" />
		<result property="user_pwd" column="user_pwd" />
	</resultMap>
    <insert id="add" parameterType="User">
        insert into t_user_info(user_id,user_name,user_sex,user_phone,user_pwd) values(#{user_id},#{user_name},#{user_sex},#{user_phone},#{user_pwd})
    </insert>

    <delete id="del" parameterType="Integer">
        delete from t_user_info where id=#{id}
    </delete>

    <update id="mod" parameterType="User">
        update t_user_info set user_id=#{user_id},user_name=#{user_name},user_sex=#{user_sex},user_phone=#{user_phone},user_pwd=#{user_pwd} where id=#{id}
    </update>

    <select id="queryByUserId" resultType="User" parameterType="String">
		select * from t_user_info where user_id=#{user_id}
	</select>

    <select id="queryById" resultType="User" parameterType="Integer">
		select * from t_user_info where id=#{id}
	</select>

    <select id="queryAll" resultMap="UserResult">
        select * from t_user_info
    </select>

    <select id="queryLikeName" resultMap="UserResult" parameterType="String">
		select * from t_user_info where 1=1
        <if test="_parameter
        
        !=null">
			and user_name  like CONCAT(CONCAT('%', #{user_name}), '%');
		</if>
	</select>
 </mapper>